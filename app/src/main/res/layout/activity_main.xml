<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_startLocationUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Start Location Updates"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stopLocationUpdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Stop Location Updates"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_startLocationUpdates" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ble_device_info"
        android:layout_marginHorizontal="16dp"
        android:text="Ble Device Info"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_stopLocationUpdates"/>

</androidx.constraintlayout.widget.ConstraintLayout>